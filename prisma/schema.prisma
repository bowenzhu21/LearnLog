// Prisma schema for LearnLog
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LearningLog {
  id          String   @id @default(cuid())
  title       String
  reflection  String
  tags        String[]
  timeSpent   Int
  sourceUrl   String?
  createdAt   DateTime @default(now())

  @@index([createdAt, id], map: "LearningLog_createdAt_id_idx")
  @@index([title], map: "LearningLog_title_idx")
  @@index([reflection], map: "LearningLog_reflection_idx")
}
